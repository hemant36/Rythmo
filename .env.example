# =============================================
# RYTHMO CONFIGURATION - ENVIRONMENT VARIABLES
# =============================================
# Copy this file as .env and fill with your values

# ===== SERVER =====
# Port where the backend runs
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# Application URL (for emails and redirects)
APP_URL=http://localhost:3000

# ===== DATABASE =====
# MySQL server host
DB_HOST=localhost

# MySQL user (usually 'root' in development)
DB_USER=root

# MySQL password (leave empty if you don't have one)
DB_PASSWORD=

# Database name
DB_NAME=rythmo

# ===== JWT AUTHENTICATION =====
# Secret key to sign JWT tokens
# ⚠️ IMPORTANT: Change this to a secure value in production
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secret_key_here_change_in_production

# JWT token expiration (in hours)
JWT_EXPIRE=24h

# ===== EMAIL (NODEMAILER) =====
# Email service (gmail, outlook, yahoo, etc.)
EMAIL_SERVICE=gmail

# Your sender email
EMAIL_USER=your-email@gmail.com

# Application password (NOT Gmail password)
# For Gmail: https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=your-app-password

# Email from which emails will be sent
EMAIL_FROM=noreply@rythmo.com

# Administrator email to receive contacts
ADMIN_EMAIL=admin@rythmo.com

# ===== CLOUDINARY OR IMAGE STORAGE =====
# Optional: If you use Cloudinary to store images
# CLOUDINARY_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# ===== PAYMENT CONFIGURATION =====
# Stripe API Key (if you implement Stripe)
# STRIPE_PUBLIC_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# PayPal Sandbox (if you implement PayPal)
# PAYPAL_CLIENT_ID=
# PAYPAL_CLIENT_SECRET=

# ===== LOGGING CONFIGURATION =====
# Log level (error, warn, info, debug)
LOG_LEVEL=debug

# ===== ADDITIONAL CONFIGURATION =====
# Allow CORS from these origins (comma separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=5242880

# Number of failed login attempts before blocking
MAX_LOGIN_ATTEMPTS=5

# Lockout time in minutes
LOCK_TIME=15

# ===== SMS (OPTIONAL) =====
# For SMS notifications
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# ===== SECURITY =====
# Hash rounds for bcrypt (higher = more secure but slower)
BCRYPT_ROUNDS=10

# ===== RECAPTCHA (OPTIONAL) =====
# RECAPTCHA_SECRET_KEY=
# RECAPTCHA_PUBLIC_KEY=
